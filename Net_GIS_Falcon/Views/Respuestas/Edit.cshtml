@model Net_Gis_Falcon.Respuestum

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Respuestas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRespuesta" />
            <div class="form-group">
                <label asp-for="CuerpoRespuesta" class="control-label">Cuerpo de la respuesta</label>
                <input asp-for="CuerpoRespuesta" class="form-control" />
                <span asp-validation-for="CuerpoRespuesta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Principal" /> @Html.DisplayNameFor(model => model.Principal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <select asp-for="Nivel" class="form-control" asp-items="ViewBag.Nivel"></select>
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RespuestaPadre" class="control-label">Respuesta del padre</label>
                <select asp-for="RespuestaPadre" class="form-control" asp-items="ViewBag.RespuestaPadre">
                    <option value="">Sin padre</option>
                </select>
                <span asp-validation-for="RespuestaPadre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
