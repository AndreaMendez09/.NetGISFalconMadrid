@model Net_Gis_Falcon.Zona

@{
    ViewData["Title"] = "Delete";
}


<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto? </h3>

<div>
    <h4>Zona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nombre de Zona
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreZona)
        </dd>
        <dt class="col-sm-2">
           Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionZona)
        </dd>
        <dt class="col-sm-2">
           Geometria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeometriaZona)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdZona" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
