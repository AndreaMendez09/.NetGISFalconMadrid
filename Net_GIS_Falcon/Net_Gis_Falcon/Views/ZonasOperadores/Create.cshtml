@model Net_Gis_Falcon.OperadoresZona

@{
    ViewData["Title"] = "Create";
}

<h4>Operadores Zona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Cuantos == 0)
            {
                <p class="text-danger">No existen operadores</p>
            }
            <div class="form-group">
                <label asp-for="Operador" class="control-label"></label>
                <select asp-for="Operador" class ="form-control" asp-items="ViewBag.Operador"></select>
            </div>
            <div class="form-group">
                <label asp-for="Zona" class="control-label"></label>
                <select asp-for="Zona" class ="form-control" asp-items="ViewBag.Zona"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>
