@model IEnumerable<Net_Gis_Falcon.Estado>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestión de estados</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Nombre de estado</th>
            <th>Es final?</th>
            <th>Color estado</th>
            <th>Padre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Esfinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PadreNavigation.NombreEstado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
