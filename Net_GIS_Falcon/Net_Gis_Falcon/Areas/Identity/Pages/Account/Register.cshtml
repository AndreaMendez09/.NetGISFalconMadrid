@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Registro</h1>

<div class="row">
    <div class="col-md-6">
        <h6 class="alert-danger">@ViewData["Error"]</h6>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crear una nueva cuenta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber">Numero de telefono</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div  class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.Gender">Genero</label>
                <select asp-for="Input.Gender" class="form-control">
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                    <option value="NB">No binario</option>
                    <option value="O">Otro</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Language"></label>
                <input asp-for="Input.Language" class="form-control" />
                <span asp-validation-for="Input.Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Direction"></label>
                <input asp-for="Input.Direction" class="form-control" />
                <span asp-validation-for="Input.Direction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Municipality"></label>
                <input asp-for="Input.Municipality" class="form-control" />
                <span asp-validation-for="Input.Municipality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthDay">Fecha de nacimiento</label>
                <input asp-for="Input.BirthDay" class="form-control" />
                <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
            </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
